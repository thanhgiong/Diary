<h1>Nhật kí mới</h1>
<%= form_for @post do |f| %>
    <%= f.label :"Tiêu đề" %><br>
    <%= f.text_field :title %><br>
    <br>
    <%= f.label :"Nội dung nhật ký" %><br>
    <%= f.text_area :body %><br>
    
    <%= f.label :"Ngày" %><br>
    <%= f.text_area :date %><br>
    <br>
    <div class="btn-group">
	    <%= f.submit "Tạo nhật ký", class: "btn btn-primary" %>
    </div>
    
    <% end %>